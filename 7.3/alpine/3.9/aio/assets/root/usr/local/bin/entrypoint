#!/bin/sh
set -e

case "$1" in
cli)
    shift

    if [ "${1#-}" != "$1" ]; then
        set -- php "$@"
    else
        set -- php -a
    fi
    ;;
fpm)
    shift

    if [ "${1#-}" != "$1" ]; then
        set -- php-fpm "$@"
    else
        set -- php-fpm
    fi
    ;;
supervisor)
    shift

    if [ "${1#-}" != "$1" ]; then
        set -- supervisord --configuration=/etc/supervisord.conf "$@"
    else
        set -- supervisord --configuration=/etc/supervisord.conf
    fi
    ;;
esac

exec "$@"
